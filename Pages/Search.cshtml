@page
@model MoviesConsumer.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}
<form method="post">
    <input asp-for="MovieName" />
    <input type="submit" />
</form>
<br />

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.movies[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.movies[0].Poster)</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src = "@item.Poster" width=150 height=200/>
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.imdbID">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
